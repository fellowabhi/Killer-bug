{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Debug Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Python: Debug debug_practice.py",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/debug_practice.py",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Run Extension",
            "type": "extensionHost",
            "request": "launch",
            "args": [
                "--extensionDevelopmentPath=${workspaceFolder}/vscode-debug-mcp"
            ],
            "outFiles": [
                "${workspaceFolder}/vscode-debug-mcp/dist/**/*.js"
            ]
        }
    ]
}
